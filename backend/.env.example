# API Keys
FIRECRAWL_API_KEY=fc-your-api-key-here
OPENAI_API_KEY=sk-your-api-key-here

# Database
DATABASE_URL=sqlite+aiosqlite:///./database.db

# Storage
ATTACHMENT_DIR=./storage/attachments

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# CORS - Allowed origins (JSON array string)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Weekly Scraping Settings
# Cron expression for weekly scraping (leave empty to disable)
# Example: "0 9 * * 1" = Every Monday at 9:00 AM
WEEKLY_SCRAPE_SCHEDULE=
SCRAPING_DAYS_AGO=7
SCRAPING_MAX_ARTICLES_PER_SITE=2
SCRAPING_TIMEOUT_SECONDS=30
SCRAPING_RATE_LIMIT_INTERVAL=5

# App
DEBUG=True

# OpenAI Model
OPENAI_MODEL=gpt-4.1-nano

# Prompt File Paths (Stage 1: Extraction by source)
PROMPT_EXTRACT_FCC=prompts/extract_fcc.txt
PROMPT_EXTRACT_SOUMU=prompts/extract_soumu.txt
PROMPT_EXTRACT_OFCOM=prompts/extract_ofcom.txt
PROMPT_EXTRACT_DEFAULT=prompts/extract_default.txt

# Prompt File Path (Stage 2: Translation)
PROMPT_TRANSLATE=prompts/translate.txt

# Soumu Scraper Keywords (optional - defaults in config.py)
# Override with JSON array: SOUMU_DEFAULT_KEYWORDS=["keyword1","keyword2"]
